<h1>New game</h1>
<% @letters.each do |letter| %>
  <div class="py-2 px-3 mb-2 bg-primary text-white d-inline-block me-2 shadow"><%= letter %></div>
<% end %>

<p>What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="letters" value="<%= @letters.join(" ") %>">
  <div class="input-group mb-3">
    <input type="text" class="form-control" name="word" placeholder="Type your word">
    <input type="submit" class="btn btn-outline-secondary" value="Play">
  </div>
</form>
